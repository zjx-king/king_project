.head {
  padding: 30rpx;
  border-top: 1px solid #eee;
  padding-left: 160rpx;
  position: relative;
  padding-bottom: 40rpx;
}

.head .tx {
  position: absolute;
  left: 30rpx;
  top: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.head .h2 {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  display: block;
  margin-bottom: 10rpx;
}

.head .p {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
  display: block;
}

.head .flex {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.head .flex .item {
  text-align: center;
}

.head .flex .h3 {
  font-size: 32rpx;
  display: block;
  margin-bottom: 10rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}

.head .flex .span {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  display: block;
}

.nav {
  display: flex;
  justify-content: space-between;
  border-bottom: 4rpx solid #e5e5e5;
  position: sticky;
  top: 0;
  background: #fff;
  z-index: 99;
}

.nav .item {
  padding: 10rpx 0;
  border-bottom: 4rpx solid transparent;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 44rpx;
  margin: 0 30rpx;
  margin-bottom: -4rpx;
  transition: 0.3s;
}

.nav .item.active {
  border-color: #333;
  color: #333;
  font-weight: bold;
}

.tab-nav {
  display: block;
  overflow: hidden;
  padding-top: 20rpx;
  padding-right: 30rpx;
  padding-bottom: 20rpx;
}

.tab-nav view {
  float: right;
  font-size: 0;
}

.tab-nav view text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  padding: 10rpx 22rpx;
  border: 1px solid #eee;
  display: inline-block;
  transition: 0.3s;
}

.tab-nav view text:first-child {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.tab-nav view text:last-child {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.tab-nav view text.active {
  color: #fff;
  background: #333;
  border-color: #333;
}

.li {
  position: relative;
  padding: 30rpx;
}

.li .cont {
  background: #f4f4f4;
  margin-left: 74rpx;
  padding: 20rpx;
  position: relative;
  min-height: 150rpx;
}

.li .cont .flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.li .cont .flex .hot {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.li .cont .flex .hot text {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
}

.li .cont .flex .hot image {
  width: 26rpx;
  height: 34rpx;
  margin-right: 10rpx;
}

.li .cont .h2 {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  max-width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.li .cont .h3 {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  margin-bottom: 10rpx;
  display: block;
}

.li .cont .p {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  word-wrap: break-word;
}

.li .cont .icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 92rpx;
  height: 94rpx;
}

.li .time {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}

.li .time .zg {
  width: 28rpx;
  height: 34rpx;
  display: block;
  margin: 0 auto;
  margin-top: 10rpx;
}

.li .time .like {
  width: 34rpx;
  height: 30rpx;
  display: block;
  margin: 0 auto;
  margin-top: 10rpx;
}

.li .time .p {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}

.li .time .span {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.tip {
  text-align: center;
  padding: 10rpx 0;
  padding-bottom: 40rpx;
  display: block;
  font-size: 28rpx;
  color: #777;
}
