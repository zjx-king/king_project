.ul {
  border-top: 1px solid #e5e5e5;
}

.ul .li {
  position: relative;
  border-bottom: 1px solid #e5e5e5;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 100rpx;
}

.ul .li image {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  left: 30rpx;
}

.ul .li  button {
  margin: 0;
  min-width: 148rpx;
  padding: 10rpx 30rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 2rpx 2rpx 0px 0px rgba(51, 51, 51, 1);
  border-radius: 10rpx;
  border: 2rpx solid rgba(51, 51, 51, 1);
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.ul .li view {
  width: 64%;
}

.ul .li .p {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ul .li .span {
  font-size: 24rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}
