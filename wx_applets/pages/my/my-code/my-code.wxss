/* pages/my/my-phone/my-phone.wxss */

.wrap {
  padding: 0 76rpx;
  padding-top: 170rpx;
}

.h2 {
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 56rpx;
  margin-bottom: 10rpx;
  display: block;
}

.p {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
  display: block;
  margin-bottom: 80rpx;
}

.li-input {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 44rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
  width: 324rpx;
}

.li-btn {
  width: 200rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 2rpx 2rpx 0px 0px rgba(51, 51, 51, 1);
  border-radius: 10rpx;
  border: 2rpx solid rgba(51, 51, 51, 1);
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
  text-align: center;
  padding: 14rpx 0;
  margin: 0;
}

.input {
  padding-bottom: 100rpx;
  position: relative;
  justify-content: space-between;
  display: flex;
  align-items: center;
}

.tip {
  position: absolute;
  bottom: 40rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(249, 81, 80, 1);
  line-height: 34rpx;
}

.sub {
  background: rgba(255, 255, 255, 1);
  box-shadow: 2rpx 2rpx 0px 0px rgba(51, 51, 51, 1);
  border-radius: 10rpx;
  border: 2rpx solid rgba(51, 51, 51, 1);
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  padding: 20rpx 0;
  transition: 0.3s;
}

.sub.disable {
  box-shadow: 2rpx 2rpx 0px 0px rgba(153, 153, 153, 1);
  border: 2rpx solid rgba(153, 153, 153, 1);
  color: rgba(153, 153, 153, 1);
}
