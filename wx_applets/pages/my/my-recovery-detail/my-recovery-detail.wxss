/* pages/edit/edit-write/edit-write.wxss */
page{
  height: 100%;
  background:rgba(245,245,245,1);
}
.write{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.flex{
  flex:1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}
.drafs-tips{
  padding: 10rpx 30rpx;
  background-color: #FDEDED;
}
.drafs-tips image{
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.drafs-tips text{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:34rpx;
  vertical-align: middle;
}
.drafs-tips button:first-of-type{
  display: inline-block;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:34rpx;
  background-color: transparent;
  padding: 0;
  vertical-align: middle;
  border-bottom: 1rpx solid rgba(102,102,102,1);
  border-radius: 0;
}

.write-tips{
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}
.write textarea{
  width: 100%;
  flex: 1;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.violation{
  height: 200rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}
.violation textarea{
  color:rgba(249,81,80,1);
}
.write-title{
  height: 160rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.write-introduction{
  height: 200rpx;
  margin: 30rpx 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.write-article{
  flex: 1;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx;
}


.write-choice{
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.write-choice view{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
}
.write-choice text{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
  border-bottom: 1px solid rgba(102,102,102,1);
}
.write-btn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #000;
  font-size:36rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  text-align: center;
}
