.ul {
  border-top: 1px solid #eee;
}

.ul .li {
  justify-content: space-between;
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  border-bottom: 1px solid #eee;
}

.ul .li image {
  width: 16rpx;
  height: 26rpx;
}

.ul .li text {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.top {
  border-top: 1px solid #eee;
  text-align: center;
  padding: 68rpx 0;
}

.top .tx {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}

.top .user {
  display: flex;
  align-items: center;
  position: relative;
  text-align: center;
  justify-content: center;
  padding-top: 10rpx;
}

.top .user .p {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  position: relative;
  align-items: center;
  display: flex;
}

.top .user image {
  position: absolute;
  width: 34rpx;
  height: 28rpx;
  right: 0;
  margin-right: -52rpx;
}

.top button {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  width: 200rpx;
  height: 40rpx;
  background: transparent;
}

.top .span {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  display: block;
  margin-top: 5rpx;
}

.share-toast {
  width: 100%;
  height: 100%;
  background-color: rgba(51, 51, 51, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  display: none;
}

.show {
  display: block;
}

.share {
  display: -webkit-flex;
  flex-direction: column;
  justify-content: flex-end;
  background-color: #fff;
  padding: 30rpx 60rpx 76rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 10rpx;
}

.share image {
  width: 92rpx;
  height: 92rpx;
  margin: 0 auto 40rpx;
}

.share text {
  display: block;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
  text-align: center;
  white-space: nowrap;
}

.share view {
  width: 100%;
  height: 40rpx;
  display: -webkit-flex;
  justify-content: flex-end;
  position: relative;
}

.share image:first-child {
  width: 22rpx;
  height: 22rpx;
  margin: 0;
  position: absolute;
  right: -30rpx;
  top: 0;
}

.share text:nth-of-type(1) {
  display: block;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  margin-bottom: 20rpx;
}

.s-btn {
  position: absolute;
  top: 65rpx;
  left: calc(50% - 50rpx);
  width: 100rpx;
  height: 100rpx;
  border: none !important;
}

.s-btn::after {
  border: none;
}
