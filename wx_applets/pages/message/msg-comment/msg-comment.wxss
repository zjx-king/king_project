.ul {
  border-top: 1px solid #eee;
}

.li {
  border-bottom: 1px solid #eee;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.li.active{
  opacity: 0.7
}
.li.active .right{
  filter: grayscale(100%);
}
.li .left {
  width: 75%;
}

.li .user {
  position: relative;
  padding-left: 70rpx;
  padding-bottom: 26rpx;
}

.li .user .tx {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
}

.li .user .h3 {
  font-size: 28rpx;
  font-weight: 400;
  color: #999;
  line-height: 1.1;
  display: block;
}

.li .user .h3 text {
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.li .user .h3 .span {
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 50%;
}

.li .user .time {
  display: block;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.li .right {
  width: 120rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.li .p {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  display: block;
  word-wrap: break-word;

}
