page {
  background: #f5f5f5;
}

.li {
  padding: 0 30rpx;
}

.li .time {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
  display: block;
  margin: 0 auto;
  padding-top: 60rpx;
  padding-bottom: 40rpx;
  text-align: center;
}

.li .cont {
  background: #fff;
  border-radius: 10rpx;
  border: 1px solid #e0e0e0;
  margin-left: 50rpx;
  position: relative;
  padding: 30rpx;
  padding-left: 70rpx;
}

.li .tx {
  position: absolute;
  left: -50rpx;
  top: calc(50% - 50rpx);
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.li .h2 {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  margin-bottom: 15rpx;
}

.li .p {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  word-wrap: break-word;
}
