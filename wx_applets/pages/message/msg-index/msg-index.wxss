/* pages/message/msg-index/msg-index.wxss */

.ul {
  border-top: 1px solid #eee;
}

.li {
  padding: 50rpx 30rpx;
  position: relative;
  padding-left: 150rpx;
  border-bottom: 1px solid #eee;
  justify-content: space-between;
  display: flex;
}

.li .tx {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 30rpx;
  top: 20rpx;
}

.li .icon {
  width: 16rpx;
  height: 26rpx;
  position: absolute;
  right: 30rpx;
  top: 55rpx;
}

.li text {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.li .p {
  position: absolute;
  top: 53rpx;
  right: 80rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
}
.li .p::after{
  content: "";
  position: absolute;
  right: -12rpx;
  top: 0;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #FB4F4F;
}
.li .span{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #FB4F4F;
  position: absolute;
  top: 47rpx;
  right: 80rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #fff;
  line-height: 40rpx;
  text-align: center;
}