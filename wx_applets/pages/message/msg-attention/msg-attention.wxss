.ul {
  border-top: 1px solid #eee;
}

.li {
  border-bottom: 1px solid #eee;
  padding: 36rpx 30rpx;
  position: relative;
  padding-left: 140rpx;
}

.li image {
  position: absolute;
  left: 30rpx;
  top: 25rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.li.active{
  opacity: 0.7
}
.li.active image{
  filter: grayscale(100%);
}
.li .h2 {
  display: block;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}

.li .p {
   display: block;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 34rpx;
  word-wrap: break-word;
}
