/* pages/login/login.wxss */

.login-logo {
  margin: 200rpx auto 170rpx;
}

.login-logo image {
  width: 154rpx;
  height: 154rpx;
  margin-bottom: 40rpx;
}

.login-logo text {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}

.login-btn {
  padding: 0 76rpx;
}

.login-btn button {
  width: 100%;
  height: auto;
  padding: 20rpx 0;
  box-sizing: border-box;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
  background: rgba(9, 181, 8, 1);
  border: 2rpx solid rgba(9, 181, 8, 1);
}

.login-btn button:nth-child(2) {
  color: rgba(51, 51, 51, 1);
  background: rgba(255, 255, 255, 1);
  box-shadow: 2rpx 2rpx 0rpx 0rpx rgba(51, 51, 51, 1);
  border: 2rpx solid rgba(51, 51, 51, 1);
  margin-top: 40rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}

.agreement {
  width: 100%;
  position: absolute;
  left: 50%;
  bottom: 60rpx;
  transform: translateX(-50%) translateY(0);
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
}

.agreement text {
  color: #128dcd;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1001;
  background: rgba(0, 0, 0, 0.5);
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: 0.3s;
}

.mask.active {
  opacity: 1 !important;
  visibility: visible !important;
}

.mask .model {
  position: relative;
  z-index: 999;
  background: #fff;
  width: 600rpx;
  border-radius: 10rpx;
}

.mask .model text {
  padding: 80rpx 30rpx;
  display: block;
  font-size: 30rpx;
  color: #333;
}

.mask .model view {
  display: flex;
  justify-content: space-between;
}

.mask .model view button {
  border-top: 1px solid #eee;
  width: 50%;
  background: transparent;
  border-radius: 0;
}

.mask .model view button:first-child {
  border-right: 1px solid #eee;
}
