page{
  height: 100%;
  background:rgba(245,245,245,1);
}
.write{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.write-tips{
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}
.write textarea{
  width: 100%;
  flex: 1;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.write-title{
   width: 90%;
   height: 160rpx;
  margin: 5% auto 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.write-introduction{
  width: 90%;
  margin: 5% auto;
  flex: 1;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.write-btn{
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #000;
  font-size:36rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  text-align: center;
}
