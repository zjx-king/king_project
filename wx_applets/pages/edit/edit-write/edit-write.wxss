/* pages/edit/edit-write/edit-write.wxss */
page{
  height: 100%;
  background:rgba(245,245,245,1);
}

.write{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.flex{
  flex:1;
  display: flex;
  flex-direction: column;
}
.tip {
  background: #fdeded;
  padding: 20rpx 98rpx;
  position: relative;
}

.tip .span {
  font-weight: bold;
  color: #333;
  border-bottom: 1px solid #333;
}

.tip image {
  position: absolute;
  left: 34rpx;
  top: 22rpx;
  width: 44rpx;
  height: 44rpx;
}

.tip text {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  display: inline-block;
}

.write-tips{
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}

.write .p{
  width: 100%;
  flex: 1;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  word-break: break-all;
  overflow-y:auto; 
}
.write-title{
  width: 90%;
  margin: 5% auto;
  height: 160rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.write-introduction{
  width: 90%;
  margin: 0 auto;
  height: 220rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.write-article{
  width: 90%;
  margin: 0 auto 5%;
  flex: 1;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}


.write-choice{
  width: 90%;
  margin: 0 auto 5%;
  display: flex;
  justify-content: space-between;
}
.write-choice view{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
}
.write-choice text{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
}
.choice-time{
  display: -webkit-flex;
}
.choice-time view:nth-of-type(2){
  color:rgba(98,116,155,1);
}
.write-choice view:last-of-type text{
   border-bottom: 1rpx solid rgba(102,102,102,1);
}
.write-btn{
  width: 100%;
  margin-top: 30rpx;
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #000;
  font-size:36rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  text-align: center;
}

checkbox .wx-checkbox-input{
   width: 30rpx; /* 背景的宽 */
   height: 30rpx; /* 背景的高 */
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  
   background: #000;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   height: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx; /* 对勾大小 30rpx */
   color:#fff; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}

.picker{
    padding: 13px;
    background-color: #FFFFFF;
}
