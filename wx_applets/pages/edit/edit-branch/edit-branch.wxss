/* pages/edit/edit-branch/edit-branch.wxss */
page{
  height: 100%;
  background:rgba(245,245,245,1);
}
.write{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.flex{
  flex:1;
  display: flex;
  flex-direction: column;
}
.title{
  display: block;
  padding: 5% 5% 0;
  font-size:28rpx;
  font-family:PingFang-SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.drafs-tips{
  padding: 10rpx 30rpx;
  background-color: #FDEDED;
}
.drafs-tips image{
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.drafs-tips text{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:34rpx;
  vertical-align: middle;
}
.drafs-tips button:first-of-type{
  display: inline-block;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:500;
  color:rgba(102,102,102,1);
  line-height:34rpx;
  background-color: transparent;
  padding: 0;
  vertical-align: middle;
  border-bottom: 1rpx solid rgba(102,102,102,1);
  border-radius: 0;
}

.write-tips{
  display: flex;
  justify-content: space-between;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}

.write textarea{
  width: 100%;
  flex: 1;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.write-title{
  width: 90%;
  margin: 5% auto;
  height: 160rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.write-introduction{
  width: 90%;
  margin: 0 auto;
  height: 220rpx;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.write-article{
  width: 90%;
  margin: 0 auto 5%;
  flex: 1;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}


.write-choice{
  width: 90%;
  margin: 0 auto 5%;
  display: flex;
  justify-content: space-between;
}
.write-choice view{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
}
.write-choice text{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
}
.choice-time{
  display: -webkit-flex;
}
.choice-time view:nth-of-type(2){
  color:rgba(98,116,155,1);
}
.write-choice view:last-of-type text{
   border-bottom: 1rpx solid rgba(102,102,102,1);
}
.write-btn{
  width: 100%;
  margin-top: 30rpx;
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #000;
  font-size:36rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  text-align: center;
}

checkbox .wx-checkbox-input{
   width: 30rpx; /* 背景的宽 */
   height: 30rpx; /* 背景的高 */
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  
   background: #000;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   height: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx; /* 对勾大小 30rpx */
   color:#fff; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}

.picker{
    padding: 13px;
    background-color: #FFFFFF;
}
