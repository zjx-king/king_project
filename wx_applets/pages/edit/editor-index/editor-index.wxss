
page {
  background: #e9e7e7;
}

.user {
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  align-content: center;
  margin-top: 80rpx;
}

.user image {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.user text {
  font-size: 28rpx;
  color: #666;
}

.bottom {
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 160rpx;
  width: 100%;
}
.bottom .item view {
  display: flex;
  text-align: center;
  background: #fff;
  border-radius: 50%;
  width: 160rpx;
  height: 160rpx;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.bottom .item image {
  display: flex;
  width: 55rpx;
  height: 62rpx;
}

.bottom .item text {
  text-align: center;
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.bottom .item text:last-child{
  font-weight: 400;
  margin-top: 8rpx;
}
