/* pages/nd/nd-catalog-branch/nd-catalog-branch.wxss *//* pages/nd/nd-catalog/nd-catalog.wxss */
.catalog-btn{
  padding: 30rpx 30rpx 28rpx;
  border-top: 1rpx solid #EEEEEE;
  border-bottom: 1rpx solid #EEEEEE;
  box-sizing: border-box;
}
.catalog-btn button{
  display: inline-block;
  padding: 10rpx 34rpx;
  margin: 0;
  background-color: #fff;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  background:rgba(255,255,255,1);
  box-shadow:2rpx 2rpx 0rpx 0rpx rgba(51,51,51,1);
  border-radius:10rpx;
  border:2rpx solid rgba(51,51,51,1);
}
.catalog-thread{
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
}
.catalog-thread text{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}
.catalog-list{
  padding: 28rpx 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
}
.catalog-list text{
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
  padding-left: 90rpx;
}
.catalog-thread .record{
  color:rgba(51,51,51,1);
}
.catalog-list .record{
  color:rgba(51,51,51,1);
}