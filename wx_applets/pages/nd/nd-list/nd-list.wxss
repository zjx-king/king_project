/* pages/nd/nd-list/nd-list.wxss */
page {
  background: #f5f5f5;
}
scroll-view {
  width: 100%;
}
.ul {
  padding: 0 30rpx;
  padding-top: 30rpx;
  position: relative;
}
.ul .li {
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  height: 220rpx;
  box-shadow: 0px 4rpx 8rpx 0px rgba(0, 0, 0, 0.06);
  margin-bottom: 40rpx;
}

.ul .li .left {
  position: relative;
  /* float: left; */
}
.ul .li .left view{
  width: 44rpx;
  height: 74rpx;
  font-size:20rpx;
  padding: 2rpx 10rpx;
  box-sizing: border-box;
  text-align: center;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  /* line-height:35rpx; */
  position: absolute;
  left: 140rpx;
  top: 0;
  margin: 0;
  z-index: 100
}

.ul .li .right {
  position: relative;
  padding-left: 250rpx;
  padding-top: 20rpx;
  padding-right: 30rpx;
}



.ul .li .left .img {
  width: 200rpx;
  height: 220rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 99;
}

.flex {
  display: flex;
  justify-content: space-between;
  padding-bottom: 60rpx;
}

.ul .li .right .hot {
  position: relative;
  padding-left: 35rpx;
  padding-top: 6rpx;
}

.ul .li .right .hot image {
  width: 26rpx;
  height: 34rpx;
  display: inline-block;
  margin-right: 10rpx;
  position: absolute;
  bottom: 0;
  top: 0;
  left: 0;
}

.ul .li .h2 {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.w70 {
  width: 70%;
}

.ul .li .span {
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 28rpx;
  display: block;
}

.ul .li .p {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
  display: block;
}

.ul .li .user {
  position: relative;
  padding-left: 60rpx;
}

.ul .li .user image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 5rpx;
}

.ul .li .user text {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
}
