/* pages/nd/nd-index/nd-index.wxss */

.top {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  text-align: center;
  background: #fff;
  border-bottom: 4rpx solid #e5e5e5;
  padding-top: 5rpx;
  padding-bottom: 3rpx;
  z-index: 99
}

.top text {
  display: inline-block;
  padding: 8rpx 0;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 44rpx;
  margin: 0 40rpx;
  border-bottom: 4rpx solid transparent;
  transition: 0.3s;
  margin-bottom: -3rpx;
}

.top text.active {
  border-bottom: 4rpx solid #333;
  color: #333;
}

.tab {
  padding-top: 68rpx;
}

.tab .bottom {
  padding: 30rpx 0;
  position: fixed;
  bottom: 15rpx;
  left: 0;
  width: 100%;
  background: #fff;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 0 8rpx 8rpx rgba(0, 0, 0, 0.05);
  z-index: 999;
}

.tab1 .bottom image, .tab2 .icon {
  width: 16rpx;
  height: 26rpx;
  margin-right: 30rpx;
  margin-top: 7rpx;
  display: inline-block;
}

.tab .bottom text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  margin-left: 30rpx;
}
scroll-view {
  width: 100%;
}
.zg-ul .li {
  border-bottom: 1px solid #e5e5e5;
  padding: 28rpx 30rpx;
  display: flex;
  justify-content: space-between;
}

.zg-ul .li .left {
  width: 75%;
}

.zg-ul .li .h2 {
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.zg-ul .li .span {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
  display: inline-block;
}

.zg-ul .li .right {
  position: relative;
}

.zg-ul .li .right image {
  width: 26rpx;
  height: 34rpx;
  display: inline-block;
  margin-right: 10rpx;
  position: absolute;
  bottom: 0;
  top: 5rpx;
  left: -35rpx;
}

.gz-ul .li {
  padding: 60rpx 30rpx;
  border-bottom: 10rpx solid #e5e5e5;
}

.gz-ul .li .user {
  position: relative;
  padding-left: 70rpx;
}

.gz-ul .li .user .tx {
  position: absolute;
  left: 0;
  top: 5rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.gz-ul .li .user .h3 {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  display: block;
}

.gz-ul .li .user .span {
  font-size: 20rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 28rpx;
  display: block;
}

.gz-ul .li .h5 {
  display: block;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
  padding: 30rpx 0;
}

.gz-ul .flex {
  display: flex;
  justify-content: space-between;
  padding-bottom: 10rpx;
}

.gz-ul .flex image {
  width: 26rpx;
  height: 34rpx;
  display: inline-block;
  margin-right: 10rpx;
}

.gz-ul .flex .h2 {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
}

.gz-ul .h4 {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  display: block;
  padding-bottom: 10rpx;
}

.gz-ul .flex .span {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
}

.gz-ul .p {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  word-break:break-all;
}

.tab .bottom .tx-list {
  position: absolute;
  text-align: right;
  /* width: 100%; */
  /* padding-right: 86rpx; */
  height: 60rpx;
}
.tab .bottom .tx-list:first-of-type{
  left: 0;
}
.tab .bottom .tx-list:nth-of-type(2){
  left: 50rpx;
}
.tab .bottom .tx-list:nth-of-type(3){
  left: 100rpx;
}
.tab .bottom .tx-list:nth-of-type(4){
  left: 150rpx;
}
.tab .bottom .tx-list:nth-of-type(5){
  left: 210rpx;
}

.tab .bottom .tx-list image {
  width: 60rpx;
  height: 60rpx;
  margin-left: -30rpx;
  border-radius: 50%;
  top: 0;
  text-align: right;
}

.tab .bottom .flex {
  display: flex;
  justify-content: space-between;
  width: 40%;
  position: relative;
}

.tab2 .bottom {
  padding: 20rpx 0;
}

.tab2 .bottom text {
  padding-top: 10rpx;
}

.tab2 .icon {
  margin-top: 17rpx;
  position: absolute;
  right: 30rpx;
  margin-right: 0;
}

.tab{
  padding-bottom: 100rpx;
}