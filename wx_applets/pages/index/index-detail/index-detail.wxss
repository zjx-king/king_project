/* pages/index/index-detail/index-detail.wxss */

.detail {
  padding: 30rpx;
}

.detail-top {
  display: -webkit-flex;
}

.top-left {
  width: 260rpx;
  height: 340rpx;
  position: relative;
  border-radius: 10rpx;
}

.top-left view {
  width: 44rpx;
  height: 74rpx;
  font-size: 20rpx;
  padding: 2rpx 10rpx;
  box-sizing: border-box;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  position: absolute;
  right: 20rpx;
  top: 0;
  margin: 0;
}

.top-right {
  margin-left: 40rpx;
}

.rightName {
  display: inline-block;
  width: 360rpx;
  font-size: 36rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(91, 91, 91, 1);
  line-height: 50rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.top-right view:first-of-type image {
  width: 26rpx;
  height: 34rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.top-right view:first-of-type text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 34rpx;
}

.top-right view:nth-of-type(2) image {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.top-right view:nth-of-type(2) text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.top-right view:nth-of-type(3) image {
  width: 28rpx;
  height: 32rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.top-right view:nth-of-type(2) {
  margin-top: 85rpx;
}

.top-right view:nth-of-type(3) {
  width: 200rpx;
  text-align: center;
  padding: 12rpx 0rpx;
  background: #fff;
  box-shadow: 0rpx 4rpx 8rpx 0rpx rgba(0, 0, 0, 0.5);
  border: 1rpx solid rgba(51, 51, 48, 1);
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.detail-nav {
  display: -webkit-flex;
  justify-content: space-around;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
  margin: 80rpx 0;
  text-align: center;
}

.detail-nav view image {
  display: block;
  width: 36rpx;
  height: 36rpx;
  margin: 0 auto 10rpx;
}

.detail-nav view {
  position: relative;
}

.detail-nav view button {
  position: absolute;
  left: -5rpx;
  top: 0;
  display: inline-block;
  padding: 0;
  margin: 0;
  padding-top: 45rpx;
  background-color: transparent;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  white-space: nowrap;
  line-height: 34rpx;
}

.detail-brief text:first-of-type {
  display: block;
  font-size: 36rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
  margin-bottom: 20rpx;
}

.detail-brief text:nth-of-type(2) {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical; /* 关键属性 */
  -webkit-line-clamp: 6; /* 关键属性 */
  overflow: hidden; /* 关键属性 */
  text-overflow: ellipsis; /* 超出内容显示省略号*/
}

.detail-brief .hide {
  display: -webkit-box;
}

.detail-brief .show {
  display: block;
}
.opacity{
  position: absolute;
  left: 0px;
  top: 0px;
  z-index: -1;
  opacity: 0;
  padding:0 30rpx;
  box-sizing: border-box;
   font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  word-break: break-all;
}

.detail-brief text:nth-of-type(3) {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
  float: right;
}

.detail-brief text:nth-of-type(4) {
  font-size: 28rpx;
  font-family: PingFangSC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
  float: right;
}

.btn {
  /* position: fixed;
  left: 50%;
  bottom: 60rpx;
  transform: translate(-50%, 0); */
  text-align: center;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.btn button {
  white-space: nowrap;
  display: inline-block;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  background: #fff;
  box-shadow: 2rpx 2rpx 0rpx 0rpx rgba(51, 51, 48, 1);
  border-radius: 10rpx;
  border: 1rpx solid rgba(51, 51, 48, 1);
  padding: 20rpx 136rpx;
}
