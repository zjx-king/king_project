/* pages/index/index-search/index-search.wxss */

/* 搜索头部 */

.search-header {
  /* position: relative; */
  position: sticky;
  top: 0;
  background-color: #fff;
  z-index: 5;
  display: flex;
}

.search-header view {
  width: 604rpx;
  height: 64rpx;
  display: -webkit-flex;
  align-items: center;
  background-color: rgba(142, 142, 147, 0.12);
  margin-left: 5%;
  padding: 0 16rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.search-header image {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
}

.search-header input {
  flex: 1;
  display: inline-block;
  vertical-align: middle;
  padding-left: 20rpx;
  caret-color: rgba(142, 112, 55, 1);
  font-size: 34rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 48rpx;
  margin-right: 20rpx;
}

.search-header button {
  display: inline-block;
  padding: 0;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  background-color: #fff;
}

button::after {
  border: none;
}

/* 搜索提示 */

.search-tips {
  display: none;
}

.hot-title {
  display: block;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  margin-top: 56rpx;
  margin-left: 5%;
}

.hot-title image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  float: right;
  margin-right: 50rpx;
}

.search-hot {
  margin-left: 5%;
  display: -webkit-flex;
  flex-wrap: wrap;
}

.search-hot text {
  display: block;
  margin-right: 20rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 34rpx;
  margin-top: 40rpx;
  background: rgba(245, 245, 245, 1);
  border-radius: 10rpx;
  padding: 20rpx;
}

scroll-view {
  width: 100%;
}

/* 搜索到的用户 */

.search-content {
  display: none;
}

.searchUser {
  display: block;
  background: rgba(245, 245, 245, 1);
  border-top: 1rpx solid rgba(245, 245, 245, 1);
}

.search-user {
  height: 120rpx;
  padding: 10rpx 42rpx;
  box-sizing: border-box;
  box-shadow: 0rpx 5rpx 20rpx 0rpx rgba(153, 153, 153, 0.1);
  background-color: #fff;
}

.user-left {
  position: relative;
}

.user-left view {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.user-left view image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 1px solid #fff;
}

.user-left view:nth-of-type(2) image {
  position: absolute;
  left: 24rpx;
}

.user-left view:nth-of-type(3) image {
  position: absolute;
  left: 48rpx;
}

.user-left view:nth-of-type(4) image {
  position: absolute;
  left: 62rpx;
}

.user-left view:nth-of-type(5) image {
  position: absolute;
  left: 86rpx;
}

.user-right {
  position: absolute;
  right: 5%;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 100rpx;
}

/* 搜索到的列表 */

.search-list {
  box-shadow: 0rpx 5rpx 20rpx 0rpx rgba(153, 153, 153, 0.1);
  margin-top: 20rpx;
  background-color: #fff;
  padding: 5% 0;
}

.search-list text:first-of-type {
  width: 500rpx;
  display: inline-block;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 44rpx;
  padding: 0rpx 46rpx;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.search-list text:nth-of-type(2) {
  float: right;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 36rpx;
  margin-right: 5%;
}

.search-list text:nth-of-type(3) {
  display: block;
  width: 500rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
  padding: 10rpx 46rpx 0;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.search-list text:last-of-type {
  display: block;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  line-height: 40rpx;
  padding: 10rpx 46rpx 0;
  box-sizing: border-box;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
