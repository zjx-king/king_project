.userList {
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 25rpx;
  box-sizing: border-box;
  border-bottom:2rpx solid rgba(188,187,193,0.3);
}
.userList-left image{
  width: 84rpx;
  height: 84rpx;
  margin-right: 30rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.userList-left text {
  font-size:34rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:44rpx;
}
.userList-right image{
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
  vertical-align: middle;
}
.userList-right text {
  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:40rpx;
}