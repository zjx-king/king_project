page{
  width: 100%;
  height: 100%;
  background:rgba(245,245,245,1);
}
.home{
  width: 100%;
  height: 100%;
}
swiper{
  height:100%;
}
.home-plate{
  width:658rpx;
   height:90%;
  text-align: center;
  margin: 8% auto 0;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 4rpx 8rpx 0rpx rgba(0,0,0,0.05);
  border-radius:10rpx;
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
}

/* 第一板块样式 */
.plate-header{
  display: -webkit-flex;
  justify-content: space-between;
  font-size:36rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:50rpx;
  margin-bottom: 10rpx;
}
.title{
  width:400rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
  text-align: left;
}
.plate-header view image{
  width: 38rpx;
  height: 36rpx;
  vertical-align: middle;
}
.plate-hot view image{
  width: 26rpx;
  height: 34rpx;
  vertical-align: middle;
}

.plate-header view text{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:34rpx;
  margin-left: 15rpx;
}
.plate-new{
  display: block;
  text-align: left;
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
  line-height:50rpx;
}
.plate-img{
  height: 60%;
  margin: 25rpx 0;
  position: relative;
}
.plate-img image{
  width: 580rpx;
  height: 100%;
  border-radius: 10rpx;
}
.plate-img view{
  width: 44rpx;
  height: 74rpx;
  font-size:20rpx;
  padding: 2rpx 10rpx;
  box-sizing: border-box;
  text-align: center;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  /* line-height:35rpx; */
  position: absolute;
  right: 20rpx;
  top: 0;
  margin: 0;
}
.plate-new{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; 
  word-wrap:break-word;
  word-break:break-all;

}

/* 第二板块样式 */
.palte-bg{
  width: 100%;
  height: 42%;
  box-shadow:0rpx 0rpx 12rpx 0rpx rgba(0,0,0,0.1);
  border-radius:10rpx;
  margin: 20rpx 0;
  position: relative;
}
.palte-bg image{
  width: 580rpx;
  height: 100%;
}
.palte-bg view{
  position: absolute;
  left: 0;
  top: 0;
  padding: 90rpx 50rpx;
  box-sizing: border-box;
}
.palte-bg text:first-of-type{
  display: block;
  font-size:40rpx;
  color:rgba(255,255,255,1);
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  line-height:56rpx;
  margin-bottom: 36rpx;
}
.palte-bg text:nth-child(2){
  font-size:28rpx;
  color:rgba(255,255,255,1);
  font-family:PingFangSC-Regular;
  font-weight:400;
  line-height:40rpx;
}

/* 第三板块样式 */
.imgList{
  display: flex;
  flex-wrap: wrap;
  height: 90%;
}
.imgList view{
  width: 274rpx;
  height: 45%;
  border-radius:10rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  position: relative;
}
.imgList view:nth-of-type(2n){
  margin-right: 0rpx;
}
.imgList view text{
  font-size:32rpx;
  color:rgba(255,255,255,1);
  font-family:PingFangSC-Regular;
  font-weight:400;
  line-height:40rpx;
  display: block;
  text-align: left;
  padding: 20rpx;
  width:150rpx;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
}
.imgList view view{
  width: 44rpx;
  height: 74rpx;
  font-size:20rpx;
  padding: 2rpx 10rpx;
  box-sizing: border-box;
  text-align: center;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  /* line-height:35rpx; */
  position: absolute;
  right: 20rpx;
  top: 0;
  margin: 0;
}

/* 第四板块样式 */
.hot-img{
  height: 85%;
  margin-top: 25rpx;
}
.hot-img image{
  width: 580rpx;
  height: 100%;
  border-radius: 10rpx;
}

/* 定位样式 */
.search-img{
  position: fixed;
  right: 10rpx;
  bottom: 0;
}
.search-img image{
  width: 100rpx;
  height: 100rpx;
}
.border-box{
  width: 100%;
  height: 6rpx;
  background:rgba(216,216,216,1);
   position: absolute;
  left: 0;
  bottom: 0;
}
.border-small{
  width: 25%;
  height: 6rpx;
  background:rgba(51,51,51,1);
  opacity: 0.8;
  position: absolute;
  left: 0;
  bottom: 0;
}
